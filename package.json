{
  "name": "we-play",
  "version": "0.0.1",
  "description": "An Ionic project",
  "author": "Renan Sigolo",
  "homepage": "https://weplaygames.app",
  "scripts": {
    "clean": "rm -rf www node_modules platforms plugins yarn.lock yarn-error.log package-lock.json app-release-signed.apk",
    "build": "yarn lint-fix && yarn build-browser && yarn build-ios && yarn build-android",
    "lint": "yarn lint-js && yarn lint-scss",
    "ionic:build": "ionic-app-scripts build",
    "ionic:serve": "ionic-app-scripts serve",
    "align": "~/Library/Android/sdk/build-tools/27.0.3/zipalign -v 4 platforms/android/app/build/outputs/apk/release/app-release-unsigned.apk app-release-signed.apk",
    "build-android-prod": "rm -rf app-release-signed.apk && ionic cordova build android --prod --release && yarn sign && yarn align",
    "build-android": "ionic cordova build android",
    "build-browser-prod": "ionic-app-scripts build --prod",
    "build-browser": "ionic-app-scripts build --release",
    "build-dev": "yarn lint && yarn prettier && yarn build-ios && yarn build-android",
    "build-ios-prod": "ionic cordova build ios --buildConfig --prod --release",
    "build-ios": "ionic cordova build ios --buildConfig --debug",
    "build-prod": "yarn lint-fix && yarn build-ios-prod && yarn build-android-prod",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "clean-install": "yarn clean && yarn cache clean && yarn install && yarn build-prod --no-resources",
    "lint-fix": "yarn lint-js-fix && yarn lint-scss-fix && yarn prettier",
    "lint-js-fix": "tslint --format stylish --project tsconfig.json --config tslint.json --fix",
    "lint-js": "tslint --format stylish --project tsconfig.json --config tslint.json",
    "lint-scss-fix": "stylelint \"src/**/*.scss\" --fix",
    "lint-scss": "stylelint \"src/**/*.scss\"",
    "prettier": "prettier --config ./.prettierrc.json --write \"./**/*.{ts,js,json,scss}\"",
    "run-android-debug": "ionic cordova run android --device -lc",
    "run-android": "ionic cordova run android",
    "run-ios": "ionic cordova run ios --buildConfig --debug -lc",
    "serve": "ionic serve",
    "sign": "jarsigner -verbose -sigalg SHA1withRSA -digestalg SHA1 -keystore _ref/olly1-user.keystore platforms/android/app/build/outputs/apk/release/app-release-unsigned.apk olly1-user",
    "update": "yarn upgrade-interactive --latest"
  },
  "dependencies": {
    "@angular/animations": "6.0.7",
    "@angular/common": "6.0.7",
    "@angular/compiler": "6.0.7",
    "@angular/compiler-cli": "6.0.7",
    "@angular/core": "6.0.7",
    "@angular/forms": "6.0.7",
    "@angular/http": "6.0.7",
    "@angular/platform-browser": "6.0.7",
    "@angular/platform-browser-dynamic": "6.0.7",
    "@ionic-native/core": "4.9.1",
    "@ionic-native/splash-screen": "4.9.1",
    "@ionic-native/status-bar": "4.9.1",
    "@ionic/storage": "2.1.3",
    "ionic-angular": "3.9.2",
    "ionicons": "3.0.0",
    "rxjs": "6.2.1",
    "rxjs-compat": "6.2.1",
    "sw-toolbox": "3.6.0",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@ionic/app-scripts": "~3.1.10",
    "husky": "~0.15.0-rc.13",
"prettier": "~1.13.7",
"stylelint": "~9.3.0",
"stylelint-config-sass-guidelines": "~5.0.0",
"stylelint-scss": "~3.1.3",
"tslint-config-prettier": "~1.13.0",
    "typescript": "2.7.2"
  },
  "config": {
		"ionic_webpack": "./config/webpack.config.js"
	}
}
